<br>
<div class="container">
  <div class="jumbotron">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h2><%= @truck.business_name %></h2>
      </div>
      <div class="panel-body">

        <% if @truck.avatar.exists? %>
          <%= image_tag @truck.avatar.url(:thumb), class: "image-responsive" %>
        <% end %>

        <p>
          <strong>Food Type:</strong>
          <%= @truck.food_type %>
        </p>
        <p>
          <strong>Website:</strong>
          <%= @truck.website %>
        </p>
        <p>
          <strong>Phone:</strong>
          <%= @truck.phone %>
        </p>
        <p>
          <strong>Owner:</strong>
          <%= @truck.owner_name %>
        </p>
        <p>
          <strong>Address:</strong>
          <%= @truck.business_address %>
        </p>
        <p>
          <strong>Email:</strong>
          <%= @truck.email %>
        </p>
        
        <p>
          <strong>Twitter:</strong>
          <a href="https://twitter.com/<%= @truck.twitter %>" class="twitter-follow-button" data-show-count="false">Follow on Twitter</a><script async src="//platform.twitter.com/widgets.js" charset="utf-8"></script>
        </p>
        
        <p>
          <strong>Current Location:</strong>
          <%= @truck.location %>
        </p>
        <% if @truck.location.present? %>
          <% my_url = "http://maps.google.com/maps/api/staticmap?size=250x300&sensor=false&zoom=15" %>
          <% my_url += "&markers=#{@truck.latitude}%2C#{@truck.longitude}" %>    
          <%= image_tag my_url %>
        <% end %>
      </div>
    </div>
    <div class="btn-toolbar">
      <%= link_to 'Back', trucks_path, class: "btn btn-default" %> 
      <% if current_user %>
        <% if current_user.id == @truck.user_id %>
          <%= link_to 'Edit', edit_truck_path(@truck), class: "btn btn-default" %> 
          <%= link_to 'Delete', @truck, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %> 
        <% end %>
      <% end %>
    </div>
  </div>
</div>