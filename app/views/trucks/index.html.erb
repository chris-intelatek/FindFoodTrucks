<div id="destination-map"></div>



<br>
<div class="container">
  <div class="jumbotron">
        <div class="panel panel-default">
          <div class="panel-heading">
            <h2 class="panel-title">Listing Food Trucks</h2>
          </div>
            <div class="panel-body">
            <p id="notice"><%= notice %></p>
            
            <% @trucks.each do |t| %>
              <h2><%= t.business_name %></h2>
              <h3><%= t.food_type %></h3>
              <p><%= t.current_location %></p>
              <p><%= t.user.username %></p>
              <% if t.avatar.exists? %>
                <%= image_tag t.avatar.url(:thumb), class: "image-responsive" %>
                
<%= javascript_tag do %>
   latitude = '<%= j t.latitude.to_s %>';
   longitude = '<%= j t.longitude.to_s %>';
<% end %>

                
              <% end %>
              <br>
              <br>
              <div class="btn-group">
                <%= link_to 'Show', t, class: "btn btn-default" %>

              </div>
              <hr>
            <% end %>
        <br>
      </div>
    </div>
  </div>
</div>

